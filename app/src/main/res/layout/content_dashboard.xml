<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cd_entire_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activities.Dashboard"
    tools:showIn="@layout/activity_dashboard">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        app:stl_clickable="true"
        android:paddingLeft="@dimen/activity_margin"
        android:background="@color/colorPrimary"
        app:stl_defaultTabBackground="@color/colorPrimary"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@drawable/custom_tab_text"
        app:stl_defaultTabTextHorizontalPadding="@dimen/activity_margin"
        app:stl_defaultTabTextMinWidth="@dimen/tab_min_width"
        app:stl_defaultTabTextSize="@dimen/tab_text"
        app:stl_distributeEvenly="false"
        app:stl_dividerColor="@android:color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_drawDecorationAfterTab="true"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/colorAccent"
        app:stl_indicatorCornerRadius="1dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="@dimen/tab_indicator_thickness"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorWithoutPadding="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewpagertab" />

</RelativeLayout>
